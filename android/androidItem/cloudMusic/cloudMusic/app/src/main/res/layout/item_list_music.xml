<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_commit_select"
    android:padding="@dimen/dp_13">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/itemIconSize"
        android:layout_height="@dimen/itemIconSize"
        android:src="@mipmap/img1"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_13">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="音乐名称"
            android:textColor="@color/titleColor"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/infoColor"
            android:textSize="@dimen/infoSize"
            android:text="歌手"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_music_menu"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/itemPlaySize"
        android:src="@mipmap/music_menu"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>